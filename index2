  <title>Lexique numérique</title>
  <style>
    body {
      font-family: Arial, sans-serif;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin: 20px 0;
      font-size: 18px;
      text-align: left;
    }
    th, td {
      padding: 12px;
      border-bottom: 1px solid #ddd;
    }
    th {
      background-color: #f2f2f2;
    }
    #alpha-bar {
      margin: 20px 0;
    }
    #alpha-bar button {
      margin: 5px;
      padding: 10px;
      cursor: pointer;
    }
    #alpha-bar button.active {
      background-color: #4CAF50;
      color: white;
    }
  </style>
</head>
<body>

  <h1>Lexique numérique</h1>

  <div id="alpha-bar">
    <!-- Boutons pour chaque lettre de l'alphabet -->
    <button onclick="filterByLetter(0)">A</button>
    <button onclick="filterByLetter(1)">B</button>
    <button onclick="filterByLetter(2)">C</button>
    <button onclick="filterByLetter(3)">D</button>
    <button onclick="filterByLetter(4)">E</button>
    <button onclick="filterByLetter(5)">F</button>
    <button onclick="filterByLetter(6)">G</button>
    <button onclick="filterByLetter(7)">H</button>
    <button onclick="filterByLetter(8)">I</button>
    <button onclick="filterByLetter(9)">J</button>
    <button onclick="filterByLetter(10)">K</button>
    <button onclick="filterByLetter(11)">L</button>
    <button onclick="filterByLetter(12)">M</button>
    <button onclick="filterByLetter(13)">N</button>
    <button onclick="filterByLetter(14)">O</button>
    <button onclick="filterByLetter(15)">P</button>
    <button onclick="filterByLetter(16)">Q</button>
    <button onclick="filterByLetter(17)">R</button>
    <button onclick="filterByLetter(18)">S</button>
    <button onclick="filterByLetter(19)">T</button>
    <button onclick="filterByLetter(20)">U</button>
    <button onclick="filterByLetter(21)">V</button>
    <button onclick="filterByLetter(22)">W</button>
    <button onclick="filterByLetter(23)">X</button>
    <button onclick="filterByLetter(24)">Y</button>
    <button onclick="filterByLetter(25)">Z</button>
    <button onclick="showAll()">Tout</button>
  </div>

  <table id="lexique-table">
    <thead>
      <tr>
        <th>Lettre</th>
        <th>Mot</th>
        <th>Définition</th>
      </tr>
    </thead>
    <tbody>
      <!-- Les données de Google Sheets seront insérées ici -->
    </tbody>
  </table>

  <script>
    const apiKey = 'AIzaSyDMdpfkeyCNGeR24WJPiNBj__E64kPrKhE';  // Votre clé API Google
    const spreadsheetId = '1Y4zpeQJgkalrj32uYIF613sT-Nox5SHzXCduXCFEFTw'; // Votre ID de feuille Google Sheets
    const range = 'Lexique!A2:C'; // Plage de données que vous voulez récupérer (ici de A2 à C)

    // Fonction pour récupérer les données de Google Sheets via l'API
    async function fetchSheetData() {
      const url = `https://sheets.googleapis.com/v4/spreadsheets/${spreadsheetId}/values/${range}?key=${apiKey}`;
      try {
        const response = await fetch(url);
        if (!response.ok) {
          throw new Error('Erreur lors de la récupération des données');
        }
        const data = await response.json();
        if (data.values) {
          populateTable(data.values);
        } else {
          console.error('Aucune donnée trouvée dans la feuille.');
        }
      } catch (error) {
        console.error('Erreur:', error);
      }
    }

    // Fonction pour remplir le tableau HTML avec les données de la feuille
    let allData = []; // Pour stocker toutes les données pour un filtrage facile

    function populateTable(data) {
      const tableBody = document.querySelector('#lexique-table tbody');
      tableBody.innerHTML = ''; // Effacer les anciennes données
      allData = data; // Stocker toutes les données

      data.forEach(row => {
        const letter = row[0].charAt(0).toUpperCase(); // Récupérer la première lettre du mot
        const word = row[1];
        const definition = row[2];

        const tr = document.createElement('tr');
        tr.setAttribute('data-letter', letter); // Ajouter l'attribut data-letter pour le filtre

        const tdLetter = document.createElement('td');
        tdLetter.textContent = letter;
        tr.appendChild(tdLetter);

        const tdWord = document.createElement('td');
        tdWord.textContent = word;
        tr.appendChild(tdWord);

        const tdDefinition = document.createElement('td');
        tdDefinition.textContent = definition;
        tr.appendChild(tdDefinition);

        tableBody.appendChild(tr);
      });
    }

    // Fonction pour filtrer les mots par colonne
    function filterByLetter(index) {
      const rows = document.querySelectorAll('#lexique-table tbody tr');
      
      rows.forEach(row => {
        const word = allData[rows.length - 1 - index][index + 1]; // Utiliser l'index pour obtenir le mot de la bonne colonne
        if (word) {
          row.style.display = ''; // Montrer la ligne si elle correspond à la lettre
          row.cells[0].textContent = String.fromCharCode(65 + index); // Afficher la lettre correspondante
          row.cells[1].textContent = word; // Afficher le mot
          row.cells[2].textContent = allData[rows.length - 1 - index][2]; // Afficher la définition
        } else {
          row.style.display = 'none'; // Cacher la ligne sinon
        }
      });

      // Mettre à jour les boutons alphabétiques
      const buttons = document.querySelectorAll('#alpha-bar button');
      buttons.forEach(button => button.classList.remove('active'));
      buttons[index].classList.add('active'); // Marquer le bouton actif
    }

    // Fonction pour afficher toutes les lignes
    function showAll() {
      const rows = document.querySelectorAll('#lexique-table tbody tr');
      rows.forEach(row => {
        row.style.display = ''; // Montrer toutes les lignes
      });

      // Réinitialiser les boutons alphabétiques
      const buttons = document.querySelectorAll('#alpha-bar button');
      buttons.forEach(button => button.classList.remove('active'));
    }

    // Appeler la fonction pour récupérer les données lors du chargement de la page
    document.addEventListener('DOMContentLoaded', fetchSheetData);
  </script>

</body>
</html>
